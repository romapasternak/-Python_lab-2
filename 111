print ("1) Сортувати в Алфавытному прядку текст")
print ("2) Получити цифри всых букв в тексты")

dija = input ("Дiя:")
txt = input("Введiть текст:")
if dija == '1':
    al = txt.split()
    al = set([word for word in al if len(word) > 2])
    al = list(al)
    al.sort(reverse=0)
    print('B Алфавiтному прядку текст:')
    print(', '.join(al))
